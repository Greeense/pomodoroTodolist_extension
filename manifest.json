{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0",
  "description": "This Chrome Extension helps users manage their focus time using the Pomodoro technique. It includes a customizable countdown timer, to-do goal tracking, desktop notifications, and sound alerts.",
  "permissions": [
    "storage",
    "notifications",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "web_accessible_resources": [
        {
            "resources": ["sound/alert.mp3","images/icon.png"],
            "matches": ["<all_urls>"]
        }
    ]
}